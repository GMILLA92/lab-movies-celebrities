<h2>Edit movie "{{title}}"" </h2>

<form action="/movies/{{_id}}" method="post">
  <label> Title:
    <input type="text" name="title" value="{{title}}"required  />   
  </label>

  <label> Genre:
    <input type="text" name="genre" value="{{genre}}" required />
  </label>

  <label> Plot:
    <textarea name="plot" value="{{plot}}" required cols="30" rows="4" > </textarea>
  </label>

  <button type="submit"> Edit</button>
</form>
